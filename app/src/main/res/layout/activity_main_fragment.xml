<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="nl.booxchange.screens.MainFragmentActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/top_card_view"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="23dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_book_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right|center"
            android:src="@drawable/ic_plus"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/log_out"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:padding="2dp"
            android:layout_gravity="right|center"
            android:src="@drawable/ic_log_out_2"/>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/button_panel"
        app:layout_constraintTop_toBottomOf="@id/top_card_view">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bottom_bar_style"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/home_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/message_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/library_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/profile_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone" />

    </LinearLayout>

    <View
        android:id="@+id/focused_button_highlight"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/mountainMeadow"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_panel"
        app:layout_constraintWidth_percent="0.25" />

</android.support.constraint.ConstraintLayout>
