<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.booxchange.screens.MainFragmentActivity">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar_style">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/home_page"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#fff"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toStartOf="@id/message_page"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/message_page"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#fff"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toStartOf="@id/library_page"
            app:layout_constraintStart_toEndOf="@id/home_page" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/library_page"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#fff"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toStartOf="@id/profile_page"
            app:layout_constraintStart_toEndOf="@id/message_page" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/profile_page"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#fff"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/library_page" />

        <View
            android:id="@+id/focused_button_highlight"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#000"
            app:layout_constraintLeft_toLeftOf="@id/home_page"
            app:layout_constraintRight_toRightOf="@id/home_page"/>

