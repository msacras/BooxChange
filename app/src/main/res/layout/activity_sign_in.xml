<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/sign_in_activity_background">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/app_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_logo_48dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/app_name"
        android:textColor="@color/lightGray"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/app_logo"
        app:layout_constraintStart_toStartOf="@+id/app_logo"
        app:layout_constraintTop_toBottomOf="@+id/app_logo" />

    <View
        android:id="@+id/line_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/whiteGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="250dp"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <View
        android:id="@+id/line_left"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="27dp"
        android:background="@color/whiteGray"
        app:layout_constraintTop_toTopOf="@id/app_logo"
        app:layout_constraintBottom_toTopOf="@id/line_bottom"
        app:layout_constraintStart_toStartOf="@id/line_bottom" />

    <View
        android:id="@+id/line_top1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/whiteGray"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toStartOf="@id/line_left"
        app:layout_constraintBottom_toTopOf="@id/line_left"
        app:layout_constraintEnd_toStartOf="@id/app_logo"/>

    <View
        android:id="@+id/line_right"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="27dp"
        android:background="@color/whiteGray"
        app:layout_constraintTop_toTopOf="@id/app_logo"
        app:layout_constraintEnd_toEndOf="@id/line_bottom"
        app:layout_constraintBottom_toTopOf="@id/line_bottom" />

    <View
        android:id="@+id/line_top2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/whiteGray"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="@id/line_right"
        app:layout_constraintBottom_toTopOf="@id/line_right"
        app:layout_constraintStart_toEndOf="@id/app_logo"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="75dp"
        android:layout_height="8dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/app_logo"
        app:layout_constraintRight_toRightOf="@+id/app_logo"
        app:layout_constraintTop_toBottomOf="@+id/app_logo" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/phone_number_field"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_margin="30dp"
        android:paddingTop="10dp"
        android:fontFamily="@font/poppins_light"
        android:background="@drawable/bottom_border"
        android:hint="@string/enter_phone"
        android:inputType="phone|textNoSuggestions"
        android:maxWidth="300dp"
        android:paddingLeft="100dp"
        app:layout_constraintBottom_toTopOf="@+id/phone_sign_in_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="300dp" />

    <View
        android:id="@+id/little_line4"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/whiteGray"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@id/phone_number_field"
        app:layout_constraintStart_toStartOf="@id/phone_number_field"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_field"/>

    <View
        android:id="@+id/little_line3"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/whiteGray"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@id/phone_number_field"
        app:layout_constraintEnd_toEndOf="@id/phone_number_field"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_field"/>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/phone_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:tint="@color/lightGray"
        app:layout_constraintBottom_toBottomOf="@+id/phone_number_field"
        app:layout_constraintLeft_toLeftOf="@+id/phone_number_field"
        app:layout_constraintTop_toTopOf="@+id/phone_number_field"
        app:srcCompat="@drawable/ic_phone" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/country_code_field"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppins_light"
        android:background="#00000000"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/phone_number_field"
        app:layout_constraintLeft_toRightOf="@+id/phone_icon"
        app:layout_constraintTop_toTopOf="@+id/phone_number_field"
        tools:text="+373" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/phone_sign_in_button"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_margin="30dp"
        android:paddingTop="2dp"
        android:background="@drawable/rounded_corner_border_gray_4dp"
        android:maxWidth="300dp"
        android:text="@string/sign_in_phone"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/lightGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_max="300dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/or_sign_in_with_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="13dp"
        android:text="@string/sign_in_alternative"
        android:textColor="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="@+id/phone_sign_in_button"
        app:layout_constraintRight_toRightOf="@+id/phone_sign_in_button"
        app:layout_constraintTop_toBottomOf="@+id/phone_sign_in_button" />

    <View
        android:id="@+id/little_line1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/whiteGray"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@id/or_sign_in_with_label"
        app:layout_constraintBottom_toBottomOf="@id/or_sign_in_with_label"
        app:layout_constraintTop_toTopOf="@id/or_sign_in_with_label"
        app:layout_constraintStart_toStartOf="@id/facebook_sign_in_button"/>

    <View
        android:id="@+id/little_line2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/whiteGray"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/or_sign_in_with_label"
        app:layout_constraintBottom_toBottomOf="@id/or_sign_in_with_label"
        app:layout_constraintTop_toTopOf="@id/or_sign_in_with_label"
        app:layout_constraintEnd_toEndOf="@id/google_sign_in_button"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:background="@drawable/rounded_corner_transparent"
        android:src="@drawable/ic_google_logo"
        android:text="G"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@+id/phone_sign_in_button"
        app:layout_constraintTop_toBottomOf="@+id/or_sign_in_with_label" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/google_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/google"
        android:textColor="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="@+id/google_sign_in_button"
        app:layout_constraintRight_toRightOf="@+id/google_sign_in_button"
        app:layout_constraintTop_toBottomOf="@+id/google_sign_in_button" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/facebook_sign_in_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:background="@drawable/rounded_corner_transparent"
        android:src="@drawable/ic_facebook_logo"
        android:text="F"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/phone_sign_in_button"
        app:layout_constraintTop_toBottomOf="@+id/or_sign_in_with_label" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fb_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/facebook"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="@+id/facebook_sign_in_button"
        app:layout_constraintRight_toRightOf="@+id/facebook_sign_in_button"
        app:layout_constraintTop_toBottomOf="@+id/facebook_sign_in_button" />

</android.support.constraint.ConstraintLayout>
