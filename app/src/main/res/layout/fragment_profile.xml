<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_gray"
            app:civ_border_color="@color/mountainMeadow"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_gallery"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="bottom"
                    android:text="@string/information"
                    android:textColor="@color/dustyGray"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/edit_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white"
                    android:paddingBottom="7dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_edit_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/tick_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:paddingBottom="7dp"
                    android:paddingTop="6dp"
                    android:src="@drawable/ic_tick"
                    android:visibility="gone"
                    app:layout_constraintRight_toLeftOf="@id/edit_btn" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/label_f_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/top_bottom_border"
                    android:theme="@style/MyEditText"
                    app:layout_constraintHorizontal_weight="0.5"
                    app:layout_constraintLeft_toLeftOf="@id/txt_info"
                    app:layout_constraintRight_toLeftOf="@id/label_l_name"
                    app:layout_constraintTop_toBottomOf="@+id/txt_info">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/f_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_light"
                        android:hint="@string/first_name"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textColor="@color/tuna"
                        android:textSize="17dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/label_l_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/semi_round_border_left"
                    android:theme="@style/MyEditText"
                    app:layout_constraintHorizontal_weight="0.5"
                    app:layout_constraintLeft_toRightOf="@id/label_f_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_info">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/l_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:enabled="false"
                        android:fontFamily="@font/poppins_light"
                        android:hint="@string/last_name"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:textColor="@color/tuna"
                        android:textSize="17dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/see_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/label_l_name">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/label_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_bot_border"
                        android:theme="@style/MyEditText">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/tuna"
                            android:textSize="17dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/label_university"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyEditText"
                        app:layout_constraintTop_toBottomOf="@id/label_email">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/university"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/university"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/tuna"
                            android:textSize="17dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/label_study_programme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/top_bottom_border"
                        android:theme="@style/MyEditText"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toLeftOf="@id/label_university"
                        app:layout_constraintRight_toLeftOf="@id/label_study_year"
                        app:layout_constraintTop_toBottomOf="@+id/label_university">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/study_programme"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/study_programme"
                            android:maxLines="1"
                            android:textColor="@color/tuna"
                            android:textSize="17dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/label_study_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/semi_round_border_left"
                        android:theme="@style/MyEditText"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_university">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/study_year"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/year"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:textColor="@color/tuna"
                            android:textSize="17dp" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txt_prc"
                        style="@style/InputLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/university"
                        android:textColor="@color/dustyGray"
                        app:layout_constraintTop_toBottomOf="@id/label_study_year" />

                    <Spinner
                        android:id="@+id/mySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txt_prc">

                    </Spinner>

                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/chevron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/see_more"
                    app:srcCompat="@drawable/ic_chevron_down_black_24dp" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardView">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_app_settings"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="bottom"
                    android:text="@string/app_settings"
                    android:textColor="@color/dustyGray"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/profile_top_border"
                    android:paddingRight="15dp"
                    android:text="@string/push_notifications"
                    android:thumb="@drawable/switch_thumb"
                    app:layout_constraintTop_toBottomOf="@id/txt_app_settings"
                    app:track="@drawable/switch_track" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:text="@string/connect_with_fb"
                    android:textColor="@color/tuna"
                    android:textSize="17dp"
                    app:layout_constraintTop_toBottomOf="@id/notifications" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/facebook_connect"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/profile_top_border"
                    android:fontFamily="@font/poppins_light"
                    android:paddingRight="15dp"
                    android:thumb="@drawable/switch_thumb"
                    app:layout_constraintTop_toBottomOf="@id/notifications"
                    app:track="@drawable/switch_track" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:text="@string/connect_with_google"
                    android:textColor="@color/tuna"
                    android:textSize="17dp"
                    app:layout_constraintTop_toBottomOf="@id/facebook_connect" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/google_connect"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/profile_top_border"
                    android:fontFamily="@font/poppins_light"
                    android:paddingRight="15dp"
                    android:thumb="@drawable/switch_thumb"
                    app:layout_constraintTop_toBottomOf="@id/facebook_connect"
                    app:track="@drawable/switch_track" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:text="@string/connect_with_phone"
                    android:textColor="@color/tuna"
                    android:textSize="17dp"
                    app:layout_constraintTop_toBottomOf="@id/google_connect" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/phone_connect"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/profile_top_border"
                    android:paddingRight="15dp"
                    android:thumb="@drawable/switch_thumb"
                    app:layout_constraintTop_toBottomOf="@id/google_connect"
                    app:track="@drawable/switch_track" />

                <!--                    <android.support.v7.widget.AppCompatImageView
                                        android:id="@+id/log_out"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/round_btn"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_exit"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="@id/delete_account"
                                        app:layout_constraintTop_toBottomOf="@id/phone_connect" />

                                    <android.support.v7.widget.AppCompatImageView
                                        android:id="@+id/delete_account"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/round_btn"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_delete"
                                        app:layout_constraintEnd_toEndOf="@id/log_out"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/phone_connect" />-->

            </android.support.constraint.ConstraintLayout>

            <nl.booxchange.widget.LoadingView
                android:id="@+id/loading_v"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
