<?xml version="1.0" encoding="utf-8"?>
<nl.booxchange.widget.SlidingNavigationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="20dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:tint="#bababa"
                app:srcCompat="@drawable/temporary_back" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/back_button"
                android:layout_toStartOf="@id/drawer_button"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#bababa"
                android:textSize="25dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/drawer_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:tint="#bababa"
                app:srcCompat="@drawable/temporary_hamburger" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/butful"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/sign_in_activity_background"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="17dp"
            app:layout_constraintBottom_toBottomOf="@id/butful"
            app:layout_constraintLeft_toLeftOf="@id/butful"
            app:layout_constraintRight_toRightOf="@id/butful"
            app:layout_constraintTop_toBottomOf="@id/butful" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/profile_image"
            android:layout_alignTop="@+id/profile_image"
            android:src="@drawable/ic_pencil_black_24dp"
            app:backgroundTint="@color/whiteGray"
            app:elevation="2dp"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:layout_alignEnd="@+id/profile_image"
            android:layout_alignTop="@+id/profile_image"
            android:src="@drawable/ic_check"
            app:backgroundTint="@color/whiteGray"
            app:elevation="2dp"
            app:fabSize="mini"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/gallery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_gallery"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/f_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/top_bottom_border"
            android:enabled="false"
            android:inputType="text"
            android:hint="First Name"
            android:maxLines="3"
            android:maxWidth="50dp"
            android:fontFamily="@font/poppins_light"
            android:paddingLeft="27dp"
            android:paddingRight="5dp"
            android:textColor="#808080"
            android:textSize="17dp"
            android:textColorHint="#c7c7c7"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/l_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/del_f_name"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_unchecked"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/f_name"
            app:layout_constraintStart_toStartOf="@+id/f_name"
            app:layout_constraintTop_toTopOf="@+id/f_name" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/l_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/semi_round_border_left"
            android:enabled="false"
            android:inputType="text"
            android:hint="Last Name"
            android:paddingLeft="13dp"
            android:lines="1"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:textSize="17dp"
            android:textColor="#808080"
            android:textColorHint="#c7c7c7"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintLeft_toRightOf="@id/f_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/del_l_name"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_unchecked"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/l_name"
            app:layout_constraintEnd_toEndOf="@+id/l_name"
            app:layout_constraintTop_toTopOf="@id/l_name"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/see_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/l_name">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/top_bottom_border"
                android:enabled="false"
                android:fontFamily="@font/poppins_light"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="27dp"
                android:paddingRight="27dp"
                android:textColor="#808080"
                android:textColorHint="#c7c7c7"
                android:textSize="17dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/del_email"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_unchecked"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/email"
                app:layout_constraintStart_toStartOf="@id/email"
                app:layout_constraintTop_toTopOf="@+id/email" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/university"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/top_bottom_border"
                android:enabled="false"
                android:fontFamily="sans-serif-light"
                android:hint="University"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#808080"
                android:textColorHint="#c7c7c7"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/study_programme"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/top_bottom_border"
                android:enabled="false"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:hint="Study Programme"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="50dp"
                android:textColor="#808080"
                android:textColorHint="#c7c7c7"
                android:textSize="15dp"
                app:layout_constraintEnd_toStartOf="@+id/study_year"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/university" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/study_year"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/semi_round_border_left"
                android:enabled="false"
                android:fontFamily="sans-serif-light"
                android:hint="Year"
                android:lines="1"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textColorHint="#c7c7c7"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/university" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/chevron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/see_more"
            app:srcCompat="@drawable/ic_chevron_down_black_24dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_border"
            app:layout_constraintTop_toBottomOf="@id/chevron" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/not_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_notification"
            app:layout_constraintBottom_toTopOf="@+id/conn_text"
            app:layout_constraintEnd_toStartOf="@+id/notifications"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notifications"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:text="Push Notifications"
            android:textColor="#8f8f8f"
            android:textSize="18dp"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chevron"
            app:layout_constraintWidth_max="300dp"
            app:track="@drawable/switch_track" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/line_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/notifications"
            app:layout_constraintTop_toBottomOf="@id/notifications" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/conn_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="bottom"
            android:text="Connected Accounts"
            android:textColor="#c7c7c7"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@id/not_icon"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/fb_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_facebook"
            app:layout_constraintBottom_toTopOf="@+id/google_connect"
            app:layout_constraintEnd_toStartOf="@+id/facebook_connect"
            app:layout_constraintTop_toBottomOf="@+id/conn_text" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/facebook_connect"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:text="Facebook"
            android:textColor="#939393"
            android:textSize="18dp"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/conn_text"
            app:layout_constraintWidth_max="300dp"
            app:track="@drawable/switch_track" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/line_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/facebook_connect"
            app:layout_constraintTop_toBottomOf="@id/facebook_connect" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/google_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_google_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/phone_connect"
            app:layout_constraintEnd_toStartOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/google_connect" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/google_connect"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:text="Google"
            android:textColor="#8f8f8f"
            android:textSize="18dp"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/facebook_connect"
            app:layout_constraintWidth_max="300dp"
            app:track="@drawable/switch_track" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/line_border"
            app:layout_constraintBottom_toTopOf="@id/phone_connect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/google_connect" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/phone_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_cellphone_black_18dp"
            app:layout_constraintBottom_toTopOf="@+id/view6"
            app:layout_constraintEnd_toStartOf="@+id/view5"
            app:layout_constraintTop_toTopOf="@+id/phone_connect" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/phone_connect"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:text="Phone"
            android:textColor="#8f8f8f"
            android:textSize="18dp"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/google_connect"
            app:layout_constraintWidth_max="300dp"
            app:track="@drawable/switch_track" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/line_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_connect" />


    </android.support.constraint.ConstraintLayout>

    <nl.booxchange.widget.LoadingView
        android:id="@+id/loading_v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</nl.booxchange.widget.SlidingNavigationLayout>