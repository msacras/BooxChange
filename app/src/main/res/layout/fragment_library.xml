<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/library_icon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_library" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/no_books_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dustyGray"
                android:lines="2"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_light"
                app:layout_constraintBottom_toTopOf="@id/add_book_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="You have no books \n in your library"
                app:layout_constraintTop_toBottomOf="@id/library_icon"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_book_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:background="@drawable/library_btn"
                android:text="add your first book"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/no_books_label" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</RelativeLayout>