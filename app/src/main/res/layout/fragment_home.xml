<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="nl.booxchange.screens.home.HomeFragmentViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:overScrollMode="never">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/most_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/whiteGray"
                android:elevation="1dp"
                app:cardCornerRadius="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.Group
                    android:id="@+id/most_viewed_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="most_viewed_label, most_viewed_more, most_viewed_list" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/most_viewed_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Most Popular"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/most_viewed_more"
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/more_background"
                    android:gravity="center"
                    android:stateListAnimator="@animator/button_elevation_animator"
                    android:text="@string/more"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/most_viewed_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/most_viewed_label" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/most_viewed_list"
                    recyclerHandler="@{viewModel}"
                    recyclerItems="@{viewModel.topBooksList}"
                    recyclerLayout="@{viewModel.booksViewsConfigurations}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/most_viewed_label"
                    tools:listitem="@layout/list_item_book" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/latest_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/whiteGray"
                android:elevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/most_view">

                <android.support.constraint.Group
                    android:id="@+id/latest_exchange_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="latest_exchange_label, latest_exchange_more, latest_exchange_list" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/latest_exchange_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Latest for exchange"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginTop="0dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/latest_exchange_more"
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/more_background"
                    android:gravity="center"
                    android:stateListAnimator="@animator/button_elevation_animator"
                    android:text="@string/more"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/latest_exchange_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/latest_exchange_label" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/latest_exchange_list"
                    recyclerHandler="@{viewModel}"
                    recyclerItems="@{viewModel.latestExchangeList}"
                    recyclerLayout="@{viewModel.booksViewsConfigurations}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/latest_exchange_label"
                    tools:listitem="@layout/list_item_book" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@color/whiteGray"
                android:elevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/latest_exchange">

                <android.support.constraint.Group
                    android:id="@+id/latest_sell_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="latest_sell_label, latest_sell_more, latest_sell_list" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/latest_sell_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Latest for sale"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginTop="0dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/latest_sell_more"
                    android:layout_width="72dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/more_background"
                    android:gravity="center"
                    android:stateListAnimator="@animator/button_elevation_animator"
                    android:text="@string/more"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/latest_sell_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/latest_sell_label" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/latest_sell_list"
                    recyclerHandler="@{viewModel}"
                    recyclerItems="@{viewModel.latestSellList}"
                    recyclerLayout="@{viewModel.booksViewsConfigurations}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/latest_sell_label"
                    tools:listitem="@layout/fragment_book" />

            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
